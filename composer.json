{
    "name": "atomicsmash/nucleus",
    "description": "A WordPress development toolkit for working with projects that use composer and node to manage assets.",
    "type": "composer-plugin",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Nucleus\\": "src/"
        }
    },
    "require": {
        "php": ">=7.4",
        "symfony/console": "^6.0",
        "symfony/process": "^6.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "symfony/var-dumper": "^6.0"
    },
    "minimum-stability": "stable",
    "bin": [
        "bin/nucleus"
    ],
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
} 
