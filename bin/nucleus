#!/usr/bin/env php
<?php

$autoloadFile = __DIR__ . '/../../../autoload.php';

if (!file_exists($autoloadFile)) {
    echo "Error: This package must be installed globally using 'composer global require atomicsmash/nucleus'" . PHP_EOL;
    exit(1);
}

require $autoloadFile;

use Nucleus\Command\PluginMigrateCommand;
use Nucleus\Command\WordPressSetupCommand;
use Nucleus\Command\ProjectCoreCommand;
use Nucleus\Command\ProjectSetupCommand;
use Nucleus\Command\ThemeCleanupCommand;
use Symfony\Component\Console\Application;

$application = new Application('Nucleus', '1.0.0');
$application->add(new PluginMigrateCommand());
$application->add(new WordPressSetupCommand());
$application->add(new ProjectCoreCommand());
$application->add(new ProjectSetupCommand());
$application->add(new ThemeCleanupCommand());
$application->run(); 
