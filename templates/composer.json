{
    "name": "{{VENDOR_NAME}}/{{PROJECT_NAME}}",
    "description": "{{PROJECT_DESCRIPTION}}",
    "type": "project",
    "license": "{{PROJECT_LICENSE}}",
    "require": {
        "php": ">={{PHP_VERSION}}",
        "composer/installers": "^2.0",
        "johnpbloch/wordpress": "{{WORDPRESS_VERSION}}"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "extra": {
        "installer-paths": {
            "{{WEB_ROOT}}wp-content/plugins/{$name}": ["type:wordpress-plugin"],
            "{{WEB_ROOT}}wp-content/themes/{$name}": ["type:wordpress-theme"],
            "{{WEB_ROOT}}wp-content/mu-plugins/{$name}": ["type:wordpress-mu-plugin"]
        },
        "wordpress-install-dir": "{{WEB_ROOT}}wp"
    }
}
